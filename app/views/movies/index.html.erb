<% unless user_signed_in? %>
  <div class="jumbotron">
     <h1> Movie Tube</h1>
     <p>place where you can rate and review movies which helps others to choose the best movies to spend their valuable time watching</p>
     <p> <%= link_to "Sign_up", new_user_registration_path, class: "btn btn-primary btn-lg" %> </p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.mimage.url(), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>